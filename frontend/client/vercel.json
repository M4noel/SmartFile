{
  "version": 2,
  "name": "smartfiles",
  "builds": [
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/client/dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/client/dist/$1"
    }
  ]
}
